    <% layout("/layouts/boilerplate") %> <!--ejs-mate-->

    <div class="row mt-3"> <!--mt-3 means margin from top 3 -->
        <div class="col-8 offset-3">
    <h1>Listing details</h1>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text"> <b><%= listing.title %> </b> <br>
            <%= listing.description %> <br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
            <%= listing.location %> <br>
            <%= listing.country %> <br>
        </p>
        </div>
    </div>


    <br>

<div class="btns">
    <a href="/listings/<%= listing._id%>/edit" class="btn bt-dark col-1 offset-3 edit-btn">Edit </a>
 
    <form method="post" action="/listings/<%= listing._id%>?_method=DELETE"> <!--post request to convert delete request-->
        <button class="btn btn-dark  offset-5">Delete </button>
    </form>
</div>
</div>
